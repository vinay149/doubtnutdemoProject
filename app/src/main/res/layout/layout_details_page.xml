<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable
            name="newsDetailsData"
            type="com.example.doubtnutdemo.ui.NewsListViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_news_name"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@+id/tv_news_author"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@={newsDetailsData.newsName}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:text="@={newsDetailsData.author}"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_top"
        android:id="@+id/tv_news_author"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_news_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_news_name"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_top"
        android:id="@+id/img_description"
        android:layout_marginRight="@dimen/margin_top"
        android:layout_width="match_parent"
        app:profileImage="@{newsDetailsData.imageUrl}"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/img_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_top"
        android:id="@+id/tv_news_details"
        android:text="@={newsDetailsData.content}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_news_details"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_top"
        android:text="@={newsDetailsData.link}"
        android:textColor="@color/colorPrimaryDark"
        android:linksClickable="true"
        android:clickable="true"
        android:onClick="@{()->newsDetailsData.openUrl(newsDetailsData.imageUrl)}"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
